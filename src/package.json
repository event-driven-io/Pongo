{
  "name": "@event-driven-io/pongo-core",
  "version": "0.17.0-beta.16",
  "description": "Pongo - Mongo with strong consistency on top of PostgreSQL",
  "type": "module",
  "engines": {
    "node": ">=22.20.0"
  },
  "private": true,
  "scripts": {
    "setup": "cat .nvmrc | nvm install; nvm use",
    "build": "run-s build:ts build:dumbo build:pongo",
    "build:ts": "tsc -b",
    "build:ts:clean": "tsc --build --clean",
    "build:ts:watch": "tsc -b --watch",
    "build:dumbo": "npm run build -w packages/dumbo",
    "build:pongo": "npm run build -w packages/pongo",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:prettier": "prettier --check \"**/**/!(*.d).{ts,json,md}\"",
    "lint:eslint": "eslint '**/*.ts'",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:prettier": "prettier --write \"**/**/!(*.d).{ts,json,md}\"",
    "fix:eslint": "eslint '**/*.ts' --fix",
    "test": "run-s test:unit test:int test:e2e",
    "test:postgresql": "run-s test:unit:postgresql test:int:postgresql test:e2e:postgresql",
    "test:sqlite": "run-s test:unit:sqlite test:int:sqlite test:e2e:sqlite",
    "test:unit:postgresql": "glob-bin -d -c \"node --import tsx --test\" **/postgresql/**/*unit.spec.ts",
    "test:unit:sqlite": "glob-bin -d -c \"node --import tsx --test\" **/sqlite/**/*unit.spec.ts",
    "test:unit": "glob-bin -d -c \"node --import tsx --test\" **/*.unit.spec.ts",
    "test:int": "glob-bin -d -c \"node --import tsx --test\" **/*.int.spec.ts",
    "test:int:postgresql": "glob-bin -d -c \"node --import tsx --test\" **/postgresql/**/*.int.spec.ts",
    "test:int:sqlite": "glob-bin -d -c \"node --import tsx --test\" **/sqlite/**/*int.spec.ts",
    "test:e2e": "glob-bin -d -c \"node --import tsx --test\" **/*.e2e.spec.ts",
    "test:e2e:postgresql": "glob-bin -d -c \"node --import tsx --test\" **/postgresql/**/*e2e.spec.ts",
    "test:e2e:sqlite": "glob-bin -d -c \"node --import tsx --test\" **/sqlite/**/*e2e.spec.ts",
    "test:watch": "run-p test:unit:watch test:int:watch test:e2e:watch",
    "test:unit:watch": "glob-bin -d -c \"node --import tsx --test --watch\" **/*.unit.spec.ts",
    "test:int:watch": "glob-bin -d -c \"node --import tsx --test --watch\" **/*.int.spec.ts",
    "test:e2e:watch": "glob-bin -d -c \"node --import tsx --test --watch\" **/*.e2e.spec.ts",
    "test:file": "node --import tsx --test",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "copy:readme": "cpy '../README.md' 'packages/pongo/src'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/event-driven-io/Pongo.git"
  },
  "keywords": [
    "Event Sourcing"
  ],
  "author": "Oskar Dudycz",
  "bugs": {
    "url": "https://github.com/event-driven-io/Pongo/issues"
  },
  "homepage": "https://event-driven-io.github.io/Pongo/",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260127.0",
    "@faker-js/faker": "^10.2.0",
    "@testcontainers/mongodb": "^11.11.0",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/benchmark": "^2.1.5",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "benchmark": "^2.1.4",
    "cpy-cli": "^6.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "glob-bin": "^1.0.0",
    "miniflare": "^4.20260124.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "testcontainers": "^11.11.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "vitepress": "^1.6.4"
  },
  "peerDependencies": {
    "ansis": "^4.2.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "pg": "^8.17.2",
    "sqlite3": "^5.1.7"
  },
  "peerDependenciesMeta": {
    "@types/pg": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "sqlite3": {
      "optional": true
    },
    "@cloudflare/workers-types": {
      "optional": true
    }
  },
  "workspaces": [
    "packages/dumbo",
    "packages/pongo"
  ]
}
